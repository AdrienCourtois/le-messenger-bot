<%- include('header') %>

<legend>Login</legend>
<form method="post" class="form-horizontal" action="">
	<% if (locals.error){ %><center style="color: red; font-weight: bold; margin-bottom: 20px;"><%= error %></center><% } %>
	<div class="form-group">
		<label for="username" class="control-label col-xs-12 col-sm-4">Username:</label>
		<div class="col-xs-12 col-sm-8"><input type="text" name="username" class="form-control" <% if (locals.username){ %>value="<%= username %>"<% } %> /></div>
	</div>
	<div class="form-group">
		<label for="password" class="control-label col-xs-12 col-sm-4">Password:</label>
		<div class="col-xs-12 col-sm-8"><input type="password" name="password" class="form-control" /></div>
	</div>
	<div class="form-group">
		<div class="col-xs-12 col-sm-8 col-sm-offset-4"><button class="btn btn-primary">Login</button></div>
	</div>
</form>

<%- include('footer') %>